#include <iostream>
using namespace std;

int main() {

string studnet;
    string subject;
    int test;
    int homwork;
    float average;

    cout <<"studnet name : ";
    cin >> studnet;
    cout <<"Subject : ";
    cin >>subject;
    cout <<"Test Score: ";
    cin >> test;
    cout <<"Homework: ";
    cin >> homwork;

    cout <<"=== Grade Report ===" << endl;
    cout <<"Student :" << studnet << endl;
    cout <<"Subject  :" << subject << endl;
    cout <<"Test Score :" << test << endl;
    cout <<"Homework :" << homwork << endl;

average = (test + homwork)/2.0;
    cout <<"Average :"  <<average << endl;



    return 0;
}